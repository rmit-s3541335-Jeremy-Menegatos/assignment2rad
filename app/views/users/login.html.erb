<!DOCTYPE html>
<html>
    
<header><%= image_tag("logo.jpg", :alt => "logo") %></header>


<div>
 <% if @current_user.present?%>
     <b>Welcome <%= @current_user %></b>
    <%else%>
       <b>Not currently logged in</b>
   <%end%>
</div>
<div class="errors">
    <% if flash[:login_errors]%>
    <% flash[:login_errors].each do |error| %>
    <p> <%=error%> </p>
    <%end%>
  <%end%>
</div>
<div class="errors">
    <% if flash[:register_error]%>
    <% flash[:register_error].each do |error| %>
    <p> <%=error%> </p>
    <%end%>
  <%end%>
</div>
<h1>Login</h1>
<a href="/index/homepage">Home</a>
<a href="/index/newcomments">Comments</a>
<a href="/index/submit">Submit</a>
<a href="/users/login">Login</a>
<body>
<h2>Login</h2>
<form action ="/sessions" method ="POST">
<input type="hidden" name="authenticity_token"  value="<%=form_authenticity_token%>">   
<b>username:<input type="text" name="login[name]" placeholder="username"></b>  
<b>password:<input type="password" name="login[password]" placeholder="password"></b> 
<b><input type="submit" name="submit" class="submit"></b>
</form>
<h2>Create Account</h2>
<form action ="/users" method ="POST">
<input type="hidden" name="authenticity_token"  value="<%=form_authenticity_token%>"> 
<b>username:<input type="text" name="user[name]" placeholder="username"></b>  
<b>password:<input type="password" name="user[password]" placeholder="password"></b>  
<b><input type="submit" name="submit" class="submit"></b>
</form>

</body>

<footer>
    <a href="/index/about">About</a>
      <a href="/index/json">API</a>
</footer>
</html>